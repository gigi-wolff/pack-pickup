<div class = 'well text-center'>
  <%= form_for [@resident, @package] do |f| %>
    <%= render 'shared/errors', obj: @package %>
    <% if @package.new_record? %>
      <div class = 'control-group'>
        <%= f.label :arrived %>
        <br/>
        <%= f.datetime_local_field :arrived, min: DateTime %>
      </div>
    <% else %>
       <div class = 'control-group'>
        <%= f.label :arrived %>
        <br/>
        <%= f.datetime_local_field :arrived, readonly: true %>
      </div>
      <div class = 'control-group'>
        <%= f.label :picked_up %>
        <br/>
        <%= f.datetime_local_field :picked_up, min: DateTime %>
        <!-- <%= f.date_field :picked_up, min: Date.today%> -->
      </div>
    <% end %>
    <br/>
    <%= f.submit(@package.new_record? ? 'Add New Package' : 'Update Package', class:'btn btn-primary')%>
  <% end %>
</div>
