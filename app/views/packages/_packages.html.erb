<!-- obj = @ resident -->
<h2><center>Packages for: <%= obj.first_name %> <%= obj.last_name %></center></h2>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <% if current_user.admin? then %> 
          <th>Edit Package</th>
        <% else %>
          <th>Open Deliveries</th>
        <% end %>
        <th>Arrived On</th>
        <th>Picked Up</th>      
      </tr>
    </thead>
    <tbody>
      <% i=0 %> 
      <% obj.packages.each do |p| %>
          <% if p.picked_up then %>
            <tr class = "success">
          <% else %>
            <tr class = "warning">
            <% i +=1 %>
          <% end %>
          <% if current_user.admin? then %> 
             <% if p.picked_up %> 
              <td><%= link_to("(delete)", resident_package_path(obj,p), method: :delete, data: { confirm: "You sure?" }) %> </td>
            <% else %>
              <td> <%= link_to(i, edit_resident_package_path(obj,p)) %> </td>
            <% end %>
          <% else %>
            <% if p.picked_up %> 
              <td>Closed</td>
            <% else %>
              <td><%= i %></td>
            <% end %>
          <% end %>         
          <td><%= display_date(p.arrived)%></td> 
          <td><%= display_date(p.picked_up)%></td>
          </tr>             
      <% end %>  
    </tbody>
  </table>
</div>
