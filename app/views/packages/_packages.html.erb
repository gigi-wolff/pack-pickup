<!-- obj = @ resident -->
<h2><center>Packages for: <%= obj.first_name %> <%= obj.last_name %></center></h2>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Delete Package</th>
        <th>Edit Package</th>
        <th>Arrived On</th>
        <th>Picked Up</th>      
      </tr>
    </thead>
    <tbody>
      <% i=1 %> 
      <% obj.packages.each do |p| %>
          <% if p.picked_up == nil then %>
            <tr class = "warning">
          <% else %>
            <tr class = "success">
          <% end %>
          <% if current_user.admin? then %> 
            <td><%= link_to("(delete)", resident_package_path(obj,p), method: :delete, data: { confirm: "You sure?" }) %> </td>
            <td> <%= link_to(i, edit_resident_package_path(obj,p)) %> </td>
          <% else %>
            <td><%= i %></td>
          <% end %>         
          <td><%= display_date(p.arrived)%></td> 
          <td><%= display_date(p.picked_up)%></td>
          </tr>             
          <% i +=1 %>
      <% end %>  
    </tbody>
  </table>
</div>
