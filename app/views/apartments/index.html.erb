<div class="container">
  <h2>Apartment Manager</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Edit Apartment</th>
        <th>Description</th>
        <th>Rent</th>
      </tr>
    </thead>
    <tbody>   
        <% @apartments.each do |a| %>
          <tr>
            <td> <%= link_to(a.apartment_number, edit_apartment_path(a)) %> </td>
            <td><%= a.description%></td>
            <td><%= a.rent.to_s(:currency)%></td>
          </tr>
        <% end %>   
    </tbody>
  </table>
</div>