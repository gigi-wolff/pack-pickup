<%= render 'shared/errors', obj: @resident %>

<div class = 'well'>
  <%= form_for @resident do |f| %>
  <fieldset>
    <legend>Personal information:</legend>
    <div class = 'control-group'>
      <%= f.label :apartment_number %> <br>
      <%if current_user.admin? %>
        <%= f.text_field :apartment_number %>
      <% else %>
        <%= f.text_field :apartment_number, readonly: true %>
      <% end %>
    </div>  

    <div class = 'control-group'>
      <%= f.label :first_name %>
      <br/>
      <%if current_user.admin? %>
        <%= f.text_field :first_name %>
      <% else %>
        <%= f.text_field :first_name, readonly: true %>
      <% end %>
    </div>
 
    <div class = 'control-group'>
      <%= f.label :last_name %>
      <br/>
      <%if current_user.admin? %>
        <%= f.text_field :last_name %>
      <% else %>
        <%= f.text_field :last_name, readonly: true %>
      <% end %>
    </div>
  </fieldset>
    <div class = 'control-group'>
      <%= f.label :phone_personal %>
      <br/>
      <%= f.text_field :phone_personal%>
    </div>

    <div class = 'control-group'>
      <%= f.label :phone_work %>
      <br/>
      <%= f.text_field :phone_work%>
    </div>
    <br/>

    <div class = 'control-group'>
      <%= f.label :username %>
      <br/>
      <%= f.text_field :username%>
    </div>
    <br/>

    <div class = 'control-group'>
      <%= label_tag :password %> <br/>
      <%= password_field_tag :password, params[:password] || '' %> 
    </div>
    <br/>

    <%= f.submit(@resident.new_record? ? 'Add New Resident' : 'Update Resident', class:'btn btn-primary')%>

  <% end %>

</div>
