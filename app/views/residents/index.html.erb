<div class="container text-center">        
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Delete Resident:</th>
        <th>Update Resident Info:</th>
        <th>Add/Update Packages for Pickup:</th>
        <th>First Name:</th>
        <th>Last Name:</th>
        <th>Phone:</th>
      </tr>
    </thead>
    <tbody>   
        <% @residents.each do |r| %>
          <tr>
            <%if r==current_user %>
              <td> </td>
            <%else%>
              <td><%= link_to("(delete)", r, method: :delete, data: { confirm: "You sure?" }) %> </td>
            <%end%>
            <td> <%= link_to(r.apartment_number, edit_resident_path(r)) %> </td>
            <td> 
              <%= link_to("#{r.package_count.to_i}", resident_path(r)) %> </td>
            <td><%= r.first_name%></td>
            <td><%= r.last_name%></td>
            <td><%= r.phone_personal.to_s(:phone, area_code: true)%></td>            
          </tr>
        <% end %>   
    </tbody>
  </table>
</div>
