<h2> Package Pick-up </h2>

<% if logged_in? %>
  <% if current_user.admin? %>
    <div class='nav_item'>
      <%= link_to 'All Residents', residents_path, class: 'btn btn-primary btn-large' %>
    </div>
    <div class='nav_item'>
      <%= link_to 'Add Resident', new_resident_path, class: 'btn btn-primary btn-large' %>
    </div>
    <div class='nav_item'>
      <%= link_to 'Apartments', apartments_path, class: 'btn btn-info btn-large' %>
    </div>
  <% end %>

  <div class='nav_item'>
    <%= link_to 'logout', logout_path, class: 'btn btn-primary btn-large'
    %>
  </div> 

  <div class='btn-group nav_item'>
    <%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
      <%= current_user.first_name %>
      <span class='caret'></span>
  <% end %>
    <ul class='dropdown-menu'>
      <li>
        <%= link_to edit_resident_path(current_user) do %>
          <i class='icon-pencil'></i>
          edit profile
        <% end %>
      </li>
    </ul>
  </div>
<% end %>

